<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="managmentGUI.RepresentativeDashboardController">
   <children>
      <Label layoutX="20.0" layoutY="20.0" text="Representative Dashboard - Bistro System" textFill="#2c3e50">
         <font><Font name="System Bold" size="24.0" /></font>
      </Label>

      <VBox layoutX="20.0" layoutY="80.0" prefWidth="200.0" spacing="10.0">
         <children>
            <Label text="Management Actions" textFill="#7f8c8d">
               <font><Font name="System Bold" size="14.0" /></font>
            </Label>
            
            <Button mnemonicParsing="false" onAction="#showRegularHoursScreen" prefWidth="200.0" text="Update Regular Hours" />
            
            <Button mnemonicParsing="false" onAction="#showSpecialHoursScreen" prefWidth="200.0" text="Update Special Hours" />

            <Button mnemonicParsing="false" onAction="#showCurrentWorkTimes" prefWidth="200.0" text="Show the updated work times" />
            
            <Button mnemonicParsing="false" onAction="#createNewSubscriber" prefWidth="200.0" text="Create New Subscriber" />
            <Button mnemonicParsing="false" onAction="#viewSubscribersList" prefWidth="200.0" text="View Subscribers List" />
            <Button mnemonicParsing="false" onAction="#viewActiveReservations" prefWidth="200.0" text="View Active Reservations" />
            <Button mnemonicParsing="false" onAction="#viewWaitingList" prefWidth="200.0" text="View Waiting List" />
            <Button mnemonicParsing="false" onAction="#viewCurrentDiners" prefWidth="200.0" text="View Current Diners" />
            <Separator prefWidth="200.0" />
            <Button mnemonicParsing="false" onAction="#clickCustomerPortal" prefWidth="200.0" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Go to Customer Portal" />
            <Button fx:id="btnLogout" mnemonicParsing="false" onAction="#clickLogout" prefHeight="10.0" prefWidth="200.0" style="-fx-background-color: #f1948a; -fx-text-fill: white; -fx-font-weight: bold;" text="LogOut" />
         </children>
      </VBox>

      <AnchorPane fx:id="contentPane" layoutX="240.0" layoutY="80.0" prefHeight="450.0" prefWidth="740.0" style="-fx-border-color: #bdc3c7; -fx-border-width: 1; -fx-border-radius: 5;" />

      <VBox layoutX="240.0" layoutY="550.0" prefHeight="130.0" prefWidth="740.0" spacing="5.0">
         <children>
            <Label text="System Log:" textFill="#7f8c8d" />
            <TextArea fx:id="txtLog" editable="false" prefHeight="100.0" prefWidth="740.0" style="-fx-font-family: 'Courier New'; -fx-font-size: 12;" />
         </children>
      </VBox>
   </children>
</AnchorPane>
