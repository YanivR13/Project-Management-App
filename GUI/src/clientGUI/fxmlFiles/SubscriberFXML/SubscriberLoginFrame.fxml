<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500.0" prefWidth="400.0" stylesheets="@../../cssStyle/style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="clientGUI.Controllers.SubscriberControlls.SubscriberLoginController">
   <children>
      <VBox alignment="CENTER" layoutX="50.0" layoutY="40.0" prefWidth="300.0" spacing="20.0">
         <children>
            <Label styleClass="header-label" text="Subscriber Login" />
            <VBox spacing="5.0">
               <children>
                  <Label text="Enter Subscriber ID:" />
                  <TextField fx:id="txtSubscriberID" promptText="Enter your unique ID" />
               </children>
            </VBox>
            <Button fx:id="btnLogin" maxWidth="Infinity" onAction="#clickLogin" text="Login" />
            <Button fx:id="btnBack" maxWidth="Infinity" onAction="#clickBack" style="-fx-background-color: #7f8c8d;" text="Back to Portal" />
         </children>
      </VBox>
      <TextArea fx:id="txtLog" editable="false" layoutX="25.0" layoutY="350.0" prefHeight="120.0" prefWidth="350.0" wrapText="true" />
   </children>
</AnchorPane>