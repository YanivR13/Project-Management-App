<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500.0" prefWidth="400.0" stylesheets="@../cssStyle/GlobalStyles.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="clientGUI.Controllers.TerminalLoginController">

    <children>

        <VBox alignment="CENTER" layoutX="50.0" layoutY="40.0" prefWidth="300.0" spacing="30.0">

            <children>

                <!-- Title -->
                <Label prefHeight="42.0" prefWidth="250.0" styleClass="header-label" text="Welcome To Bistro" />

                <Label text="Please select login type:" />

                <!-- Buttons -->
                <VBox spacing="15.0">
                    <children>

                        <Button fx:id="btnSubLogin" maxWidth="Infinity" onAction="#clickSubscriber" prefHeight="60.0" styleClass="btn-login" text="Subscriber" />

                        <Button fx:id="btnOccasionalAccess" maxWidth="Infinity" onAction="#clickOccasional" prefHeight="60.0" styleClass="btn-cancel" text="Occasional" />

                    </children>
                </VBox>

            </children>
        </VBox>

        <!-- Log / Status Area -->
        <TextArea fx:id="txtLog" editable="false" layoutX="25.0" layoutY="350.0" prefHeight="120.0" prefWidth="350.0" wrapText="true" />

    </children>
</AnchorPane>
