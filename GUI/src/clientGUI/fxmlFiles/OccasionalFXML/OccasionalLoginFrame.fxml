<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="550.0" prefWidth="400.0" stylesheets="@../../cssStyle/style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="clientGUI.Controllers.OccasionalControlls.OccasionalLoginController">
   <children>
      <VBox alignment="CENTER" layoutX="50.0" layoutY="30.0" prefWidth="300.0" spacing="15.0">
         <children>
            <Label styleClass="header-label" text="Occasional Login" />
            <VBox spacing="5.0">
               <children>
                  <Label text="Username:" />
                  <TextField fx:id="txtUsername" promptText="Enter username" />
               </children>
            </VBox>
            <VBox spacing="5.0">
               <children>
                  <Label text="Phone or Email:" />
                  <TextField fx:id="txtContact" promptText="Enter phone/email" />
               </children>
            </VBox>
            <Button fx:id="btnLogin" maxWidth="Infinity" onAction="#clickLogin" text="Login" />
            <Button fx:id="btnRegister" maxWidth="Infinity" onAction="#clickRegister" style="-fx-background-color: #2ecc71;" text="Register New User" />
            <Button fx:id="btnBack" maxWidth="Infinity" onAction="#clickBack" style="-fx-background-color: #7f8c8d;" text="Back to Portal" />
         </children>
      </VBox>
      <TextArea fx:id="txtLog" editable="false" layoutX="25.0" layoutY="400.0" prefHeight="120.0" prefWidth="350.0" wrapText="true" />
   </children>
</AnchorPane>