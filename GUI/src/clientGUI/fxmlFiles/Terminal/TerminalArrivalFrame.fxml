<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="417.0" stylesheets="@../../cssStyle/GlobalStyles.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="terminalGUI.Controllers.TerminalControllers.VisitUIController">
   <children>
      <VBox alignment="CENTER" layoutX="50.0" layoutY="40.0" spacing="20.0" AnchorPane.bottomAnchor="40.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="40.0">
         <children>
            <Label styleClass="terminal-title" text="Check-In Arrival" />
            
            <Label text="Please enter your confirmation code:" textFill="#333333">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>

            <TextField fx:id="txtCode" maxWidth="250.0" prefHeight="40.0" promptText="Enter Code Here" style="-fx-alignment: center;">
               <font>
                  <Font size="18.0" />
               </font>
            </TextField>

            <Button fx:id="btnVerify" mnemonicParsing="false" onAction="#onVerifyClicked" prefHeight="45.0" prefWidth="200.0" styleClass="btn-success" text="I'm Here!" />

            <Label fx:id="lblStatus" textAlignment="CENTER" textFill="#e40c0c" wrapText="true">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Label>

            <Button fx:id="btnBack" mnemonicParsing="false" onAction="#onBackClicked" prefHeight="34.0" prefWidth="120.0" styleClass="btn-danger" text="Back" />
         </children>
      </VBox>
   </children>
</AnchorPane>