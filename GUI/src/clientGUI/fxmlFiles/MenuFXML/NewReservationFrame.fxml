<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="450.0" stylesheets="@../../cssStyle/GlobalStyles.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="clientGUI.Controllers.MenuControlls.NewReservationController">
   <children>
      <VBox alignment="TOP_CENTER" layoutX="40.0" layoutY="30.0" prefWidth="370.0" spacing="20.0">
         <children>
            <Label styleClass="header-label" text="New Reservation" />
            
            <VBox spacing="8.0">
               <children>
                  <Label text="Select Date:" />
                  <DatePicker fx:id="dpDate" maxWidth="Infinity" promptText="Choose a date" />
               </children>
            </VBox>

            <VBox spacing="8.0">
               <children>
                  <Label text="Select Time:" />
                  <ComboBox fx:id="comboTime" maxWidth="Infinity" promptText="Choose a slot" />
               </children>
            </VBox>

            <VBox spacing="8.0">
               <children>
                  <Label text="Number of Guests:" />
                  <TextField fx:id="txtGuests" promptText="How many people?" />
               </children>
            </VBox>

            <Region prefHeight="10.0" />

            <VBox spacing="15.0">
               <children>
                  <Button fx:id="btnConfirm" maxWidth="Infinity" onAction="#clickConfirm" prefHeight="50.0" styleClass="btn-new" text="Confirm Reservation" />
                  <Button fx:id="btnBack" maxWidth="Infinity" onAction="#clickBack" prefHeight="50.0" styleClass="btn-cancel" text="Back" />
               </children>
            </VBox>
            
            <TextArea fx:id="txtLog" editable="false" prefHeight="150.0" prefWidth="370.0" wrapText="true" />
         </children>
      </VBox>
   </children>
</AnchorPane>