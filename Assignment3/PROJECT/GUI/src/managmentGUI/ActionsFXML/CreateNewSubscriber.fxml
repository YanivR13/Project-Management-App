<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox spacing="20.0" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label text="Register New Subscriber" textFill="#2c3e50">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      
      <GridPane hgap="10.0" vgap="15.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Phone Number:" GridPane.rowIndex="0" />
            <TextField fx:id="txtPhone" prefWidth="200.0" promptText="e.g. 0501234567" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            
            <Label text="Email Address:" GridPane.rowIndex="1" />
            <TextField fx:id="txtEmail" prefWidth="200.0" promptText="customer@example.com" GridPane.columnIndex="1" GridPane.rowIndex="1" />
         </children>
      </GridPane>
      
      <Separator prefWidth="200.0" />
      
      <VBox spacing="10.0">
         <children>
            <Button mnemonicParsing="false" onAction="#processCreateSubscriber" prefHeight="40.0" prefWidth="250.0" 
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;" 
                    text="Create Subscriber Account" />
            
            <Label text="* Phone must be exactly 10 digits." textFill="#7f8c8d">
               <font>
                  <Font name="System Italic" size="11.0" />
               </font>
            </Label>
            
            <Label text="* Email must contain an '@' symbol." textFill="#7f8c8d">
               <font>
                  <Font name="System Italic" size="11.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </children>
</VBox>