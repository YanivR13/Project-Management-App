<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="550.0" prefWidth="400.0" stylesheets="@../../cssStyle/GlobalStyles.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="clientGUI.Controllers.OccasionalControlls.OccasionalRegistrationController">
   <children>
      <VBox alignment="CENTER" layoutX="50.0" layoutY="30.0" prefWidth="300.0" spacing="15.0">
         <children>
            <Label styleClass="header-label" text="Guest Registration" />
            
            <VBox spacing="5.0">
               <children>
                  <Label text="Desired Username:" />
                  <TextField fx:id="txtNewUser" promptText="Enter unique username" />
               </children>
            </VBox>
            
            <VBox spacing="5.0">
               <children>
                  <Label text="Phone Number or Email:" />
                  <TextField fx:id="txtNewContact" promptText="For future identification" />
               </children>
            </VBox>

            <Button fx:id="btnSubmit" maxWidth="Infinity" onAction="#clickSubmitRegistration" styleClass="btn-register" text="Create Account" />
            <Button fx:id="btnBack" maxWidth="Infinity" onAction="#clickBack" styleClass="btn-back" text="Back to Login" />
         </children>
      </VBox>
      <TextArea fx:id="txtLog" editable="false" layoutX="25.0" layoutY="400.0" prefHeight="120.0" prefWidth="350.0" wrapText="true" />
   </children>
</AnchorPane>