<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="550.0" prefWidth="450.0" stylesheets="@../../cssStyle/GlobalStyles.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="clientGUI.Controllers.OccasionalControlls.OccasionalMenuController">
   <children>
      <VBox alignment="TOP_CENTER" layoutX="25.0" layoutY="20.0" prefWidth="400.0" spacing="25.0">
         <children>
            <Label styleClass="header-label" text="Guest Menu" textFill="#56aaff">
               <font>
                  <Font name="System Bold" size="36.0" />
               </font>
            </Label>

            <GridPane alignment="CENTER" hgap="15.0" vgap="15.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="180.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="180.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="80.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="80.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Button fx:id="btnNewReservation" maxWidth="Infinity" maxHeight="Infinity" onAction="#clickNewReservation" style="-fx-background-color: #2ecc71; -fx-background-radius: 15;" text="New Reservation" textFill="WHITE" GridPane.columnIndex="0" GridPane.rowIndex="0">
                     <font><Font name="System Bold" size="16.0" /></font>
                  </Button>
                  
                  <Button fx:id="btnPayBill" maxWidth="Infinity" maxHeight="Infinity" onAction="#clickPayBill" style="-fx-background-color: #f1c40f; -fx-background-radius: 15;" text="Pay Bill" textFill="WHITE" GridPane.columnIndex="1" GridPane.rowIndex="0">
                     <font><Font name="System Bold" size="14.0" /></font>
                  </Button>
                  
                  <Button fx:id="btnViewReservation" maxWidth="Infinity" maxHeight="Infinity" onAction="#clickViewReservation" style="-fx-background-color: #3498db; -fx-background-radius: 15;" text="View Reservation" textFill="WHITE" GridPane.columnIndex="0" GridPane.rowIndex="1">
                     <font><Font name="System Bold" size="16.0" /></font>
                  </Button>
                  
                  <Button fx:id="btnExitWaitingList" maxWidth="Infinity" maxHeight="Infinity" onAction="#clickExitWaitingList" style="-fx-background-color: #e67e22; -fx-background-radius: 15;" text="Exit Waiting List" textFill="WHITE" GridPane.columnIndex="1" GridPane.rowIndex="1">
                     <font><Font name="System Bold" size="16.0" /></font>
                  </Button>
               </children>
            </GridPane>

            <Button fx:id="btnLogout" maxWidth="Infinity" onAction="#clickLogout" prefHeight="50.0" style="-fx-background-color: #e74c3c; -fx-background-radius: 15;" text="Logout" textFill="WHITE">
               <font><Font name="System Bold" size="18.0" /></font>
            </Button>
         </children>
      </VBox>

      <TextArea fx:id="txtLog" editable="false" layoutX="25.0" layoutY="410.0" prefHeight="110.0" prefWidth="400.0" style="-fx-background-radius: 10;" wrapText="true" />
   </children>
</AnchorPane>