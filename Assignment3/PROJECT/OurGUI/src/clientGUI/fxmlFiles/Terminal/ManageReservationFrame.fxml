<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20" prefHeight="400.0" prefWidth="417.0" 
      stylesheets="@../../cssStyle/GlobalStyles.css" 
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="terminalGUI.Controllers.TerminalControllers.ManageReservationController">
    
    <children>
        <Label styleClass="terminal-title" text="Manage Your Reservation" />
        
        <Button fx:id="btnCancel" onAction="#onCancelReservation" prefWidth="250.0" 
                styleClass="btn-danger" text="Cancel Reservation" />
        
        <Button fx:id="btnExitWaiting" onAction="#onExitWaitingList" prefWidth="250.0" 
                styleClass="btn-warning" text="Exit Waiting List" />
        
        <Button fx:id="btnPay" onAction="#onPayReservation" prefWidth="250.0" 
                styleClass="btn-success" text="Pay for Reservation" />
        
        <Button fx:id="btnBack" onAction="#onBackClicked" prefWidth="100.0" 
                styleClass="btn-secondary" text="Back" />
    </children>
</VBox>